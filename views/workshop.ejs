            <ul>
                <% workshops.forEach(workshop => { %>
                    <li><%= workshop.name %></li>
                    <a href="<%=workshop.id%>" class="btn btn-primary">Details</a>

                <% }); %>
            </ul>
        </div>
    <%-include("partials/footer",{workshops:workshops})-%>